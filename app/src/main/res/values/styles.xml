        <item name="shapeAppearanceOverlay">
            @style/ThemeOverlay.FoodPlanner.Button.ShapeAppearanceOverlay
        </item>
        <item name="elevation">10dp</item>
    </style>

    <style name="ThemeOverlay.FoodPlanner.Button" parent="" />

    <style name="ThemeOverlay.FoodPlanner.Button.ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.FoodPlanner.Button.Fat" parent="">
        <item name="android:padding">18dp</item>
    </style>

    <style name="Theme.FoodPlanner.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.FoodPlanner.Button.Text</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="ThemeOverlay.FoodPlanner.Button.Text" parent="" >
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="Theme.FoodPlanner.Button.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
<!--        <item name="materialThemeOverlay">@style/ThemeOverlay.FoodPlanner.Button.Icon</item>-->
        <item name="elevation">10dp</item>
        <item name="iconGravity">textTop</item>
