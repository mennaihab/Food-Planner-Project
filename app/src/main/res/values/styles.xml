        <item name="boxBackgroundColor">@color/dark_grey</item>
    </style>

    <style name="ThemeOverlay.FoodPlanner.TextInputLayout.Search.ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

