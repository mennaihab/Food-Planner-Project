    <style name="Widget.FoodPlanner.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

    <style name="Theme.FoodPlanner.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.FoodPlanner.BottomNavigationView
        </item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="ThemeOverlay.FoodPlanner.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="Theme.FoodPlanner.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.FoodPlanner.ToolbarStyle</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="ThemeOverlay.FoodPlanner.ToolbarStyle" parent="">
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.FoodPlanner.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.FoodPlanner.TextInputLayout</item>
        <item name="shapeAppearanceOverlay">
            @style/ThemeOverlay.FoodPlanner.TextInputLayout.ShapeAppearanceOverlay
        </item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="hintTextColor">@drawable/hint_selector</item>
        <item name="boxBackgroundColor">#CFCBCB</item>
        <item name="boxStrokeColor">@drawable/hint_selector</item>
        <item name="counterTextColor">@drawable/edit_text_selector</item>
        <item name="errorTextColor">#FF1313</item>
    </style>

    <style name="ThemeOverlay.FoodPlanner.TextInputLayout.ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ThemeOverlay.FoodPlanner.TextInputLayout" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.FoodPlanner.TextInputLayout.Search" parent="">
        <item name="shapeAppearanceOverlay">
            @style/ThemeOverlay.FoodPlanner.TextInputLayout.Search.ShapeAppearanceOverlay
