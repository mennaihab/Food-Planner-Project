<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LaunchingStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="LandingStyle">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="CapsuleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AuthText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppName">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AuthSlogan">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AuthButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.FoodPlanner.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

    <style name="Theme.FoodPlanner.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.FoodPlanner.BottomNavigationView</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="ThemeOverlay.FoodPlanner.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.FoodPlanner.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.FoodPlanner.ToolbarStyle</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="ThemeOverlay.FoodPlanner.ToolbarStyle" parent="">
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>
